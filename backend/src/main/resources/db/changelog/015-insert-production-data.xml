<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Вставка продакшн-данных для рангов -->
    <changeSet id="015-01-insert-rank-requirements" author="system">
        <insert tableName="rank_requirements">
            <column name="rank_level" value="0"/>
            <column name="required_experience" value="0"/>
            <column name="required_mission_name" value=""/>
            <column name="required_competency_points" value="0"/>
            <column name="competency_names" value=""/>
            <column name="description" value="Космо-Кадет - начальный ранг"/>
        </insert>
        
        <insert tableName="rank_requirements">
            <column name="rank_level" value="1"/>
            <column name="required_experience" value="100"/>
            <column name="required_mission_name" value="Первая миссия"/>
            <column name="required_competency_points" value="10"/>
            <column name="competency_names" value="Навигация,Связь"/>
            <column name="description" value="Космо-Лейтенант"/>
        </insert>
        
        <insert tableName="rank_requirements">
            <column name="rank_level" value="2"/>
            <column name="required_experience" value="300"/>
            <column name="required_mission_name" value="Сложная миссия"/>
            <column name="required_competency_points" value="25"/>
            <column name="competency_names" value="Навигация,Связь,Боевые системы"/>
            <column name="description" value="Космо-Капитан"/>
        </insert>
    </changeSet>

    <!-- Вставка продакшн-данных для компетенций -->
    <changeSet id="015-02-insert-competencies" author="system">
        <insert tableName="competencies">
            <column name="name" value="Навигация"/>
            <column name="short_description" value="Управление кораблем в космосе"/>
            <column name="description" value="Навыки пилотирования, ориентации в пространстве и управления навигационными системами"/>
        </insert>
        
        <insert tableName="competencies">
            <column name="name" value="Связь"/>
            <column name="short_description" value="Коммуникационные системы"/>
            <column name="description" value="Работа с коммуникационным оборудованием, кодирование и декодирование сообщений"/>
        </insert>
        
        <insert tableName="competencies">
            <column name="name" value="Боевые системы"/>
            <column name="short_description" value="Управление оружием"/>
            <column name="description" value="Стрельба, управление боевыми системами, тактическое планирование"/>
        </insert>
        
        <insert tableName="competencies">
            <column name="name" value="Инженерия"/>
            <column name="short_description" value="Техническое обслуживание"/>
            <column name="description" value="Ремонт и обслуживание корабельных систем, диагностика неисправностей"/>
        </insert>
    </changeSet>

    <!-- Вставка продакшн-данных для артефактов -->
    <changeSet id="015-03-insert-artifacts" author="system">
        <insert tableName="artifacts">
            <column name="name" value="Кристалл Энергии"/>
            <column name="short_description" value="Источник энергии для корабля"/>
            <column name="image_url" value="/images/artifacts/crystal.jpg"/>
            <column name="rarity" value="COMMON"/>
        </insert>
        
        <insert tableName="artifacts">
            <column name="name" value="Навигационный Компас"/>
            <column name="short_description" value="Улучшает навигационные способности"/>
            <column name="image_url" value="/images/artifacts/compass.jpg"/>
            <column name="rarity" value="RARE"/>
        </insert>
        
        <insert tableName="artifacts">
            <column name="name" value="Щит Защиты"/>
            <column name="short_description" value="Защищает корабль от атак"/>
            <column name="image_url" value="/images/artifacts/shield.jpg"/>
            <column name="rarity" value="EPIC"/>
        </insert>
    </changeSet>

    <!-- Вставка продакшн-данных для миссий -->
    <changeSet id="015-04-insert-missions" author="system">
        <insert tableName="missions">
            <column name="name" value="Первая миссия"/>
            <column name="description" value="Изучение базовых систем корабля"/>
            <column name="branch_id" value="1"/>
            <column name="type" value="ОБУЧЕНИЕ"/>
            <column name="difficulty" value="ЛЕГКАЯ"/>
            <column name="experience_reward" value="50"/>
            <column name="energy_reward" value="10"/>
            <column name="required_rank" value="0"/>
            <column name="required_experience" value="0"/>
            <column name="required_competencies" value="Навигация"/>
        </insert>
        
        <insert tableName="missions">
            <column name="name" value="Сложная миссия"/>
            <column name="description" value="Боевая операция в открытом космосе"/>
            <column name="branch_id" value="2"/>
            <column name="type" value="БОЕВАЯ"/>
            <column name="difficulty" value="СРЕДНЯЯ"/>
            <column name="experience_reward" value="150"/>
            <column name="energy_reward" value="25"/>
            <column name="required_rank" value="1"/>
            <column name="required_experience" value="100"/>
            <column name="required_competencies" value="Навигация,Связь"/>
        </insert>
        
        <insert tableName="missions">
            <column name="name" value="Экспедиция в глубокий космос"/>
            <column name="description" value="Исследование неизвестных территорий"/>
            <column name="branch_id" value="3"/>
            <column name="type" value="ИССЛЕДОВАНИЕ"/>
            <column name="difficulty" value="СЛОЖНАЯ"/>
            <column name="experience_reward" value="300"/>
            <column name="energy_reward" value="50"/>
            <column name="required_rank" value="2"/>
            <column name="required_experience" value="300"/>
            <column name="required_competencies" value="Навигация,Связь,Боевые системы"/>
        </insert>
    </changeSet>

    <!-- Вставка дополнительных карт -->
    <changeSet id="015-05-insert-additional-cards" author="system">
        <insert tableName="cards">
            <column name="name" value="Космо-Лейтенант"/>
            <column name="series_name" value="Восхождение по иерархии Флота"/>
            <column name="front_image_url" value="/images/cards/2.jpg"/>
            <column name="back_description" value="Первый шаг к командованию. Ты научился основам, теперь время применить знания на практике"/>
            <column name="rarity" value="COMMON"/>
            <column name="unlock_condition" value="Получение ранга Космо-Лейтенант"/>
            <column name="unlock_rank" value="1"/>
            <column name="is_active" valueBoolean="true"/>
        </insert>
        
        <insert tableName="cards">
            <column name="name" value="Космо-Капитан"/>
            <column name="series_name" value="Восхождение по иерархии Флота"/>
            <column name="front_image_url" value="/images/cards/3.jpg"/>
            <column name="back_description" value="Командование - это не только звание, но и ответственность. Ты готов вести других к победе"/>
            <column name="rarity" value="RARE"/>
            <column name="unlock_condition" value="Получение ранга Космо-Капитан"/>
            <column name="unlock_rank" value="2"/>
            <column name="is_active" valueBoolean="true"/>
        </insert>
        
        <insert tableName="cards">
            <column name="name" value="Космо-Командор"/>
            <column name="series_name" value="Восхождение по иерархии Флота"/>
            <column name="front_image_url" value="/images/cards/4.jpg"/>
            <column name="back_description" value="Вершина иерархии. Ты стал легендой флота, примером для всех космо-воинов"/>
            <column name="rarity" value="EPIC"/>
            <column name="unlock_condition" value="Получение ранга Космо-Командор"/>
            <column name="unlock_rank" value="3"/>
            <column name="is_active" valueBoolean="true"/>
        </insert>
    </changeSet>

</databaseChangeLog>
