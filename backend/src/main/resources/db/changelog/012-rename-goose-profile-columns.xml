<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="012-rename-goose-profile-columns" author="tapgame">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="goose_game_profile"/>
        </preConditions>

        <!-- Переименование столбцов под требуемую структуру -->
        <renameColumn tableName="goose_game_profile" oldColumnName="user_id" newColumnName="id_tg" columnDataType="BIGINT"/>
        <renameColumn tableName="goose_game_profile" oldColumnName="username" newColumnName="username_tg" columnDataType="VARCHAR(100)"/>
        <renameColumn tableName="goose_game_profile" oldColumnName="first_tap" newColumnName="start" columnDataType="TIMESTAMP"/>

        <!-- Гарантируем ограничения после переименования -->
        <addNotNullConstraint tableName="goose_game_profile" columnName="id_tg" columnDataType="BIGINT"/>
    </changeSet>

</databaseChangeLog>
