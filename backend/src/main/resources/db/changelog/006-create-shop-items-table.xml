<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Shop Items Table -->
    <changeSet id="006-create-shop-items-table" author="Lins">
        <comment>Создание таблицы товаров магазина Нексус</comment>
        <createTable tableName="shop_items">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1000)"/>
            <column name="price" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="image_url" type="VARCHAR(500)"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="stock_quantity" type="INTEGER"/>
        </createTable>
    </changeSet>

    <!-- User Purchases Table -->
    <changeSet id="006-create-user-purchases-table" author="Lins">
        <comment>Создание таблицы истории покупок пользователей</comment>
        <createTable tableName="user_purchases">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="shop_item_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="purchased_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="price_paid" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="energy_after" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Внешние ключи -->
        <addForeignKeyConstraint
                baseTableName="user_purchases"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_user_purchases_user"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="user_purchases"
                baseColumnNames="shop_item_id"
                referencedTableName="shop_items"
                referencedColumnNames="id"
                constraintName="fk_user_purchases_shop_item"
                onDelete="RESTRICT"/>

        <!-- Индексы для ускорения выборок -->
        <createIndex tableName="user_purchases" indexName="idx_user_purchases_user_id">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="user_purchases" indexName="idx_user_purchases_shop_item_id">
            <column name="shop_item_id"/>
        </createIndex>
        <createIndex tableName="user_purchases" indexName="idx_user_purchases_purchased_at">
            <column name="purchased_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
